<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="JSON" injector-id="js">
      <display-name>New Js Injection</display-name>
      <prefix>{% schema %}</prefix>
      <suffix>{% endschema %}</suffix>
    </injection>
    <injection language="CSS" injector-id="xml">
      <display-name>textarea/@type</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("type")).withParent(xmlTag().withLocalName(string().equalTo("textarea")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>