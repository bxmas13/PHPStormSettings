<templateSet group="Twig">
  <template name="comm" value="{% comment %} {# $END$ #} {% endcomment %}" description="Liquid Comment" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="CSS" value="true" />
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="img" value="{{ '$END$' | asset_url | img_tag }}" description="Liquid Image" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="CSS" value="true" />
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
      <option name="PHP" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
</templateSet>